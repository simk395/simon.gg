<img src="/summoners-rift.jpeg" class="summoner-bg"/>


<div class="container">
    <div class="inner">
    <p class="summoner-name"><%= @summoner.summoner_name %></p>
    <img src="http://avatar.leagueoflegends.com/na/<%= @summoner.summoner_name %>.png" class="summoner-icon" alt="">
    <%= link_to @matches[0]["gameId"], games_path, class: "game-id" %>
    </div>
</div>


<%= form_for @game do |f| %>
    <%= f.hidden_field :game, value: "#{@matches[0]["gameId"]}" %>
    <%= f.submit "Check Game" %>
<% end %>

